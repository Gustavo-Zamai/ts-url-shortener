{
  "name": "ts-url-shortener",
  "version": "1.0.0",
  "description": "Develop a URL shortener with NodeJS",
  "main": "index.js",
  "scripts": {
    "start": "node dist/index.js",
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "start:dev": "tsx --env-file=.env src/index.ts",
    "start:watch": "tsx watch --env-file=.env src/index.ts",
    "start:build": "npm run dist && --env-file=.env node/dist/index.js",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Gustavo-Zamai/URL-Shortener.git"
  },
  "keywords": [
    "Javascript",
    "Tytpescript",
    "NodeJS"
  ],
  "author": "Gustavo Sim√£o Zamai",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Gustavo-Zamai/URL-Shortener/issues"
  },
  "homepage": "https://github.com/Gustavo-Zamai/URL-Shortener#readme",
  "dependencies": {
    "core-js": "^3.20.3",
    "express": "^4.17.2",
    "mongoose": "^8.16.0",
    "shortid": "^2.2.16",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@typegoose/typegoose": "^12.17.0",
    "@types/express": "^4.17.13",
    "@types/mongoose": "^5.11.97",
    "@types/shortid": "^0.0.29",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.0",
    "prettier": "^3.6.0",
    "tsup": "^8.5.0",
    "tsx": "^4.20.3"
  }
}
